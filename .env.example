# Discord Bot Configuration
# Copy this file to .env and fill in your values

# Discord Bot Token (get it from https://discord.com/developers/applications)
DISCORD_TOKEN=your_discord_token_here

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=this_is_psg
DB_USER=bot_user
DB_PASSWORD=your_secure_password_here
# Connection pool size (optional)
# DB_POOL_MIN_SIZE=2
# DB_POOL_MAX_SIZE=10

# Debug Mode (optional)
# When true, only DEBUG_USER can use commands
DEBUG_MODE=false
DEBUG_USER=your_discord_username

# Discord Server ID (clic droit sur le serveur -> Copier l'ID)
SERVER_ID=0

# Discord Role IDs (clic droit sur le role -> Copier l'ID)
ROLE_NEWBIE_ID=0
ROLE_MEMBRE_ID=0
ROLE_SAGE_ID=0

# Discord Channel IDs (clic droit sur le salon -> Copier l'ID)
CHANNEL_ACCUEIL_ID=0
CHANNEL_GENERAL_ID=0
CHANNEL_SAGE_ID=0

# Web / GitHub Pages
# URL du site (page index)
SITE_URL=https://your-username.github.io/your-repo/
# URL de la carte des membres
WEB_URL=https://your-username.github.io/your-repo/carte.html
# URL de la charte (si vide, envoie le fichier local)
URL_CHARTE=https://your-username.github.io/your-repo/charte.html

# GitHub API (publication carte sans git local)
# Token avec permission "contents: write" - creer sur https://github.com/settings/tokens
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Repo au format owner/repo
GITHUB_REPO=your-username/your-repo

# Timeouts (optional, in seconds)
# TIMEOUT_LANGUAGE_SELECT=300
# TIMEOUT_CHARTE_READ=600
# TIMEOUT_PLAYER_INPUT=120
# TIMEOUT_LOCATION_INPUT=120
# TIMEOUT_KEEP_OR_RESET=300
# TIMEOUT_LANGUAGE_CHANGE=60
# TIMEOUT_GEOCODING=10
